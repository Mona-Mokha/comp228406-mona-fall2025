<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mona.gameapp.controller.PlayGameController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Select Player:"/>
    <ComboBox fx:id="pgPlayerCombo" prefWidth="300"/>

    <Label text="Select Game:"/>
    <ComboBox fx:id="pgGameCombo" prefWidth="300"/>

    <Label text="Date Played:"/>
    <DatePicker fx:id="pgDatePicker"/>

    <Label text="Score:"/>
    <TextField fx:id="pgScoreField" promptText="Enter score"/>

    <Button text="Add Played Game" onAction="#insertPlayedGame"/>
</VBox>
