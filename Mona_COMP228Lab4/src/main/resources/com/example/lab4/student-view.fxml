<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.lab4.StudentController"
          hgap="10" vgap="10">
    <!-- Padding -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Full Name -->
    <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="fullNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

    <!-- Address -->
    <Label text="Address:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="addressField" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

    <!-- City -->
    <Label text="City:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="cityField" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

    <!-- Province -->
    <Label text="Province:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="provinceField" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

    <!-- Postal Code -->
    <Label text="Postal Code:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="postalCodeField" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

    <!-- Phone -->
    <Label text="Phone:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

    <!-- Email -->
    <Label text="Email:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

    <!-- Major Radio Buttons -->
    <Label text="Major:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <HBox spacing="10" GridPane.rowIndex="7" GridPane.columnIndex="1" GridPane.columnSpan="2">
        <children>
            <RadioButton fx:id="csRadio" text="Computer Science"/>
            <RadioButton fx:id="businessRadio" text="Business"/>
        </children>
    </HBox>

    <!-- Courses ComboBox -->
    <Label text="Courses:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <ComboBox fx:id="courseComboBox" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    <ListView fx:id="selectedCoursesList" GridPane.rowIndex="9" GridPane.columnIndex="1" />

    <!-- Add Course Button -->
    <Button text="Add Course" onAction="#addCourse" GridPane.rowIndex="8" GridPane.columnIndex="2"/>

    <!-- Activities CheckBoxes -->
    <Label text="Activities:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
    <HBox spacing="10" GridPane.rowIndex="11" GridPane.columnIndex="1" GridPane.columnSpan="2">
        <children>
            <CheckBox fx:id="sportsCheck" text="Sports"/>
            <CheckBox fx:id="musicCheck" text="Music Club"/>
            <CheckBox fx:id="volunteeringCheck" text="Volunteering"/>
        </children>
    </HBox>

    <!-- TextArea for Student Info -->
    <Button text="Show Info" onAction="#showStudentInfo" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
    <TextArea fx:id="outputArea" GridPane.rowIndex="13" GridPane.columnIndex="0" GridPane.columnSpan="3" prefRowCount="25" wrapText="true"/>

</GridPane>
