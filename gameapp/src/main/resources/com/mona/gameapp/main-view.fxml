<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mona.gameapp.controller.MainController">
    <center>
        <TabPane prefWidth="900" prefHeight="600">
            <tabs>
                <!-- Players Tab -->
                <Tab text="Players">
                    <ScrollPane fitToWidth="true" fitToHeight="true">
                        <VBox spacing="10">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                            <GridPane hgap="10" vgap="8">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="15"/>
                                    <ColumnConstraints percentWidth="35"/>
                                    <ColumnConstraints percentWidth="15"/>
                                    <ColumnConstraints percentWidth="35"/>
                                </columnConstraints>

                                <Label text="Player ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="playerIdField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="First Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="firstNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                                <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                                <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <TextField fx:id="addressField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                <Label text="Postal Code:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                                <TextField fx:id="postalCodeField" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                                <Label text="Province:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <TextField fx:id="provinceField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                                <Label text="Phone:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                                <TextField fx:id="phoneNumberField" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
                            </GridPane>

                            <HBox spacing="10">
                                <Button fx:id="insertPlayerButton" text="Insert Player" onAction="#insertPlayer"/>
                                <Button fx:id="updatePlayerButton" text="Update Player" onAction="#updatePlayer"/>
                            </HBox>

                            <Label text="Players (click a row to load into form)"/>
                            <TableView fx:id="playerTable" prefHeight="220">
                                <columns>
                                    <TableColumn fx:id="playerIdColumn" text="ID" prefWidth="60"/>
                                    <TableColumn fx:id="playerFirstNameColumn" text="First Name" prefWidth="150"/>
                                    <TableColumn fx:id="playerLastNameColumn" text="Last Name" prefWidth="150"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </ScrollPane>
                </Tab>

                <!-- Games Tab -->
                <Tab text="Games">
                    <ScrollPane fitToWidth="true" fitToHeight="true">
                        <VBox spacing="10">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                            <GridPane hgap="10" vgap="8">
                                <Label text="Game ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="gameIdField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                <Label text="Title:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="gameTitleField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                            </GridPane>

                            <HBox spacing="10">
                                <Button fx:id="insertGameButton" text="Insert Game" onAction="#insertGame"/>
                            </HBox>

                            <Label text="Games"/>
                            <TableView fx:id="gameTable" prefHeight="300">
                                <columns>
                                    <TableColumn fx:id="gameIdColumn" text="ID" prefWidth="80"/>
                                    <TableColumn fx:id="gameTitleColumn" text="Title" prefWidth="300"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </ScrollPane>
                </Tab>

                <!-- Reports Tab -->
                <Tab text="Reports">
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>

                        <Label text="All Played Games"/>
                        <TableView fx:id="reportTable" prefHeight="450">
                            <columns>
                                <TableColumn fx:id="rptPlayerGameIdColumn" text="Row ID" prefWidth="60" />
                                <TableColumn fx:id="rptPlayerNameColumn" text="Player" prefWidth="180" />
                                <TableColumn fx:id="rptGameTitleColumn" text="Game" prefWidth="180" />
                                <TableColumn fx:id="rptPlayedOnColumn" text="Played On" prefWidth="180" />
                                <TableColumn fx:id="rptScoreColumn" text="Score" prefWidth="80" />
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>